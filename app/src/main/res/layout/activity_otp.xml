<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logo_constrain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liya"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="24sp"
            android:textColor="#1da1f2"
            android:textStyle="bold"
            android:fontFamily="@font/calibrib"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_otp_declaration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP send to your phone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_constrain"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/robotor"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/textview_otp_sent_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99999 "

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_otp_declaration"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/robotor"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/edittext_otp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/search_layout2"

        android:ems="10"
        android:hint="Enter OTP here"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_otp_sent_number"
        />

    <Button
        android:id="@+id/verify_otp_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Get Started"
        android:textColor="#fff"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/common_btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.AppCompat.Button.Colored"
        />




</androidx.constraintlayout.widget.ConstraintLayout>