<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgwh"
    tools:context=".OtpActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/logo_constrain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff"

        android:layout_marginBottom="25dp"
        >


        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_arrow_back_black"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_verify_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"

        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Verify your number"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_constrain" />



    <TextView
        android:id="@+id/textview_otp_declaration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP send to "

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_verify_number"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:fontFamily="@font/abeezee"
        android:textColor="#999"
        />

    <TextView
        android:id="@+id/textview_otp_sent_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_otp_declaration"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:textSize="22sp"
        android:fontFamily="@font/calibrib"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/edittext_otp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/search_layout2"

        android:ems="10"
        android:paddingStart="15dp"
        android:hint="Enter OTP here"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="number"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_otp_sent_number"
        />

    <Button
        android:id="@+id/verify_otp_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Get Started"
        android:textColor="#fff"
        android:layout_margin="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/common_btn_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>